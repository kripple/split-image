{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,

    /* Path resolution */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* do not output tsconfig.tsbuildinfo */
    "incremental": false,

    /* no extra files */
    "declaration": false,
    "sourceMap": false,

    /* Make the linting useful again */
    "allowJs": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },

  /* resolve path aliases for node */
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
